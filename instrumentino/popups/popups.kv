<ExitConfirmation>:
    title: 'Exit?'
    size_hint: .5, .2
    BoxLayout:
        Button:
            text: "No"
            on_release: root.dismiss()
        Button:
            text: "Yes"
            on_release: app.get_running_app().stop()

